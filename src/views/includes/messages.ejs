<% if (errors.length > 0) { %>
<div class="row">
    <div class="col my-3">
        <div class="alert-danger p-2">
            <% errors.forEach(error => { %>
            <%= error %><br>
            <% }) %>
        </div>
    </div>
</div>
<% } %>
<% if (success.length > 0) { %>
<div class="row">
    <div class="col my-3">
        <div class="alert-success p-2">
            <% success.forEach(success => { %>
            <%= success %><br>
            <% }) %>
        </div>
    </div>
</div>
<% } %>